# PostPilot Flask Configuration Template
# Copy this to .env and fill in your actual values
# IMPORTANT: Never commit .env to version control!

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=0

# Facebook Configuration (Tour Posts)
TOUR_ACCESS_TOKEN=your_facebook_access_token_here
TOUR_PAGE_ID=your_facebook_page_id_here

# Facebook Configuration (Visa/NZ Posts)
VISA_ACCESS_TOKEN=your_facebook_access_token_here
VISA_PAGE_ID=your_facebook_page_id_here

# Instagram Configuration
IG_ACCESS_TOKEN=your_instagram_access_token_here
IG_USER_ID=your_instagram_user_id_here

# Posting Intervals (in seconds)
TOUR_INTERVAL=1800  # 30 minutes
VISA_INTERVAL=1800  # 30 minutes
INSTA_CHECK_INTERVAL=180  # 3 minutes

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_FOLDER=images

# Server Configuration
HOST=0.0.0.0
PORT=5000
WORKERS=4
